@model Employee


@using (Html.BeginForm("Create", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Employee</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name" id="employeeNameLabel" ></label>
            <input asp-for="Name" id="employeeNameText" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Salary" id="employeeSalaryLabel"></label>
            <input asp-for="Salary" class="form-control" id="employeeSalaryText"/>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width-150px" id="employeeCreateButton">Create</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width-150px"> Back to List</a>
    </div>
     </div>

     

}
